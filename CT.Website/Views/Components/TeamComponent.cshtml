@using CT.Website.Models;
@using CT.Website.Repositories;
@model List<TeamMember>
@{
    Layout = null;
    TextComponent textComponent = TextComponentRepository.OurTeamComponent();

}

<section class="component-section @textComponent.ColorClass">
    <div class="container">
        <div class="page-title">
            <h2>@textComponent.Title</h2>
        </div>
        <div class="page-sub-title">@Html.Raw(@textComponent.Description)</div>
        <div class="row component-row">
            @foreach (var teamMember in Model)
            {
            <div class="form-item col-md-4">
                <img src="@teamMember.ImageUrl" alt="member image" class="teamMemberImgComponent" />
                <h3>@teamMember.Name</h3>
                <h4 class="team-function">@teamMember.Positions</h4>
                <div class="row">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-2"></div>
                    <div class="col-sm-2">
                        <a href="@teamMember.Linkedin" target="_blank" class="linkedin"></a>
                    </div>
                    <div class="col-sm-2">
                        <a href="mailto:@teamMember.Email" target="_blank" class="email"></a>
                    </div>
                    <div class="col-sm-2"></div>
                    <div class="col-sm-2"></div>
                </div>
            </div>
            }
        </div>
        <div class="linkHolder">
            <a href="@textComponent.LinkUrl" class="btn btn-primary btn-white">@textComponent.LinkText</a>
        </div>
    </div>
</section>
